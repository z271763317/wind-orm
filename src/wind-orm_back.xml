<?xml version="1.0" encoding="UTF-8" ?>
<dataSources url="http://www.tcin.cn">
	<!-- 【MySQL】 -->
	<!-- id（区分大小写）不填或空字符串则取默认值：default -->
	<dataSource id="default">
		<!-- 数据库驱动字符串 -->
		<driver>com.mysql.jdbc.Driver</driver>
		<!-- 数据库连接字符串 -->
		<url>jdbc:mysql://localhost:3306/test</url>
		<!-- 数据库名称（框架会自动获取，优先采用指定的） -->
		<!-- <dataBase>test</dataBase> -->
		<!-- 数据库用户名 -->
		<userName>root</userName>
		<!-- 数据库密码 -->
		<passWord>123</passWord>
		<!-- 连接池最大连接数 -->
		<max>1</max>
		<!-- 数据库类型（mysql【默认】、sql server、oracle等） -->
		<type>mysql</type>
		<!-- 默认表名前缀 -->
		<table_prefix></table_prefix>
		<!-- 默认列名前缀 -->
		<col_prefix></col_prefix>
	</dataSource>
	
	<!-- 【SQL Server】 -->
	<dataSource id="default">
		<!-- 数据库驱动字符串 -->
		<driver>com.microsoft.sqlserver.jdbc.SQLServerDriver</driver>
		<!-- 数据库连接字符串 -->
		<url>jdbc:sqlserver://localhost:50411;DatabaseName=test</url>
		<!-- 数据库名称 -->
		<dataBase>test.dbo</dataBase>
		<!-- 数据库用户名 -->
		<userName>root</userName>
		<!-- 数据库密码 -->
		<passWord>123</passWord>
		<!-- 连接池最大连接数 -->
		<max>1</max>
		<!-- 数据库类型（mysql【默认】、sql server、oracle等）-->
		<type>sql server</type>
		<!-- 默认表名前缀 -->
		<table_prefix></table_prefix>
		<!-- 默认列名前缀 -->
		<col_prefix></col_prefix>
	</dataSource>
	
	<!-- 【Oracle】 -->
	<dataSource id="default">
		<!-- 数据库驱动字符串 -->
		<driver>oracle.jdbc.driver.OracleDriver</driver>
		<!-- 数据库连接字符串 -->
		<url>jdbc:oracle:thin:@localhost:1521:orcl</url>
		<!-- 数据库名称 -->
		<dataBase>ROOT</dataBase>
		<!-- 数据库用户名 -->
		<userName>ROOT</userName>
		<!-- 数据库密码 -->
		<passWord>123</passWord>
		<!-- 连接池最大连接数 -->
		<max>1</max>
		<!-- 数据库类型（mysql【默认】、sql server、oracle等）-->
		<type>oracle</type>
		<!-- 默认表名前缀 -->
		<table_prefix></table_prefix>
		<!-- 默认列名前缀 -->
		<col_prefix></col_prefix>
	</dataSource>
	
</dataSources>